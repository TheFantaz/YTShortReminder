{
    "manifest_version": 3,
    "name": "YT Shorts Tracker",
    "description": "Gives you a reminder after a specified time after watching YT Shorts for too long",
    "version": "1.0",
    "action": {
        "default_popup": "dPopup.html"
    },
    "permissions": [
        "notifications",
        "activeTab",
        "tabs",
        "storage",
        "webNavigation",
        "windows",
        "offscreen"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    }

}